#!/usr/bin/env bash
set -e
if [[ ! -d "/home/llanos/2024_10_07_cpg0014_Adipocytes/jump-profiling-recipe" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/llanos/2024_10_07_cpg0014_Adipocytes/jump-profiling-recipe")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/llanos/2024_10_07_cpg0014_Adipocytes/jump-profiling-recipe" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/llanos/2024_10_07_cpg0014_Adipocytes/jump-profiling-recipe/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/llanos/2024_10_07_cpg0014_Adipocytes/jump-profiling-recipe/.envrc" "/home/llanos/2024_10_07_cpg0014_Adipocytes/jump-profiling-recipe/.direnv"/*.rc
